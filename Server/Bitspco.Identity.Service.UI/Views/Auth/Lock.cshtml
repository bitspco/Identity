@{ Layout = null; }
<!DOCTYPE html>
<html lang="en" class="sigma" dir="rtl">
<head>
    <title>ورود به سامانه</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Images/logo.png" rel="icon" type="image/png" sizes="16x16">
    <link href="~/Plugins/sigma/sigma.css" rel="stylesheet" />
    <link href="~/Plugins/iransans/iransans.css" rel="stylesheet" />
    <link href="~/Plugins/material-design/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Styles/lock.css" rel="stylesheet" />
</head>
<body class="rtl iransans">
    <div class="overlay"></div>
    <form class="p-20" v-on:submit.prevent="submit" autocomplete="off">
        <div class="image p-30">
            <img src="~/Images/user.png"/>
        </div>
        <div class="form-group p-10">
            <input class="form-control" v-model="model.Password" type="password" autofocus required />
        </div>
        <div class="p-10 flex">
            <button class="btn btn-green flex-1">ورود</button>
        </div>
        <div class="pt-10 text-center" v-if="message"><p>{{message}}</p></div>
    </form>
    <script src="~/Plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Plugins/vue.js/vue.min.js"></script>
    <script src="~/Scripts/Script.js"></script>
    <script src="~/Scripts/Models.js"></script>
    <script src="~/Scripts/Lock.js"></script>
</body>
</html>
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en" class="sigma" dir="rtl">
<head>
    <title>ورود به سامانه</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Images/logo.png" rel="icon" type="image/png" sizes="16x16">
    <link href="~/Plugins/sigma/sigma.css" rel="stylesheet" />
    <link href="~/Plugins/iransans/iransans.css" rel="stylesheet" />
    <link href="~/Plugins/material-design/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Styles/auth.css" rel="stylesheet" />
</head>
<body class="rtl iransans">
    <form class="p-20" v-on:submit.prevent="submit" autocomplete="off">
        <h2 class="text-center pb-10">ورود به سامانه</h2>
        <div class="form-group p-10">
            <label class="w-20">نام کاربری :</label>
            <input class="form-control" v-model="model.Username" autofocus required />
        </div>
        <div class="form-group p-10">
            <label class="w-20">کلمه عبور :</label>
            <input class="form-control" v-model="model.Password" type="password" required />
        </div>
        <div class="p-10 flex">
            <button class="btn btn-green flex-1">ورود</button>
        </div>
        <div class="pt-10 text-center font-13">
            <a class="">رمز عبور خود را فراموش کرده ام</a>
        </div>
        <div class="pt-10 text-center" v-if="message"><p>{{message}}</p></div>
        <div class="progress" v-if="progress"><img src="~/Images/login.svg"/></div>
    </form>
    <script src="~/Plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Plugins/vue.js/vue.min.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/models.js"></script>
    <script src="~/Scripts/auth.js"></script>
</body>
</html>
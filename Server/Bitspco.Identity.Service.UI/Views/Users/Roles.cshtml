<div id="roles" class="modal modal-green-dark">
    <div>
        <div class="header">
            <div class="title"><i class="mdi mdi-chemical-weapon"></i> <span class="px-10">لیست نقش ها</span></div>
            <div class="close"><a href="#">✖</a></div>
        </div>
        <div class="body container-xs">
            <form v-on:submit.prevent="add">
                <div class="flex">
                    <div class="flex-1">
                        <div class="form-group">
                            <label>نقش : </label>
                            <select class="form-control" required v-model="model.RoleId">
                                <option v-bind:value="null">انتخاب کنید ...</option>
                                <option v-for="item in roles" v-bind:value="item.Id" v-if="!items.find(x => x.RoleId == item.Id)">
                                    {{item.Name}}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="px-10">
                        <button class="btn btn-green-dark">افزودن</button>
                    </div>
                </div>
            </form>
            <table class="table striped bordered mt-10">
                <thead>
                    <tr>
                        <th style="width: 70px">شناسه</th>
                        <th>نام</th>
                        <th>نماد</th>
                        <th>وضعیت</th>
                        <th style="width: 25px"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in items">
                        <td>{{item.Role.Id}}</td>
                        <td>{{item.Role.Name}}</td>
                        <td>{{item.Role.Symbol}}</td>
                        <td>{{item.Role.GetStatusName()}}</td>
                        <td class="controls"><a class="btn btn-red" v-on:click="remove(item.RoleId)"><i class="mdi mdi-delete"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
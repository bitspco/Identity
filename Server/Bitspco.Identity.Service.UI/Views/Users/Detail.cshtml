<div id="detail" class="modal modal-orange">
    <div>
        <div class="header">
            <div class="title"><i class="mdi mdi-pencil-off"></i> <span class="px-10">جزئیات</span></div>
            <div class="close"><a href="#">✖</a></div>
        </div>
        <div class="body container-xs">
            <div class="row">
                <div class="col-sm-6">
                    <div class="p-5 form-group"><label class="w-20">نام : </label><input class="form-control" v-model="model.Name" required /></div>
                    <div class="p-5 form-group"><label class="w-20">نام کاربری : </label><input class="form-control" v-model="model.Username" required /></div>
                    <div class="p-5 form-group"><label class="w-20">کد ملی : </label><input class="form-control" v-model="model.NationalId" /></div>
                    <div class="p-5 form-group"><label class="w-20">تاریخ تولد : </label><input class="form-control" type="date" v-model="model.Birthday" /></div>
                    <div class="p-5 form-group">
                        <label class="w-20">جنسیت : </label>
                        <select class="form-control" v-model="model.Gender" required>
                            <option v-bind:value="null">انتخاب کنید ...</option>
                            <option v-bind:value="1">مرد</option>
                            <option v-bind:value="2">زن</option>
                        </select>
                    </div>
                    <div class="p-5 form-group"><label class="w-20">توضیحات : </label><input class="form-control" v-model="model.Description" /></div>
                </div>
                <div class="col-sm-6">
                    <div class="p-5 form-group">
                        <label class="w-25">موقعیت : </label>
                        <select class="form-control" v-model="model.PositionId">
                            <option v-bind:value="null">انتخاب کنید ...</option>
                            <option v-for="item in positions" v-bind:value="item.Id">
                                {{ item.Name }}
                            </option>
                        </select>
                    </div>
                    <div class="p-5 form-group"><label class="w-25">زمان انقضا (دقیقه) : </label><input class="form-control" type="number" v-model="model.Timeout" required /></div>
                    <div class="p-5 form-group"><label class="w-25">حداکثر توکن فعال : </label><input class="form-control" type="number" v-model="model.MaxTokenCount" required /></div>
                    <div class="p-5 form-group">
                        <label class="w-25">الزام تغییر پسورد : </label>
                        <select class="form-control" v-model="model.IsNeedChangePassword" required>
                            <option v-bind:value="null">انتخاب کنید ...</option>
                            <option v-bind:value="false">خیر</option>
                            <option v-bind:value="true">بله</option>
                        </select>
                    </div>
                    <div class="p-5 form-group">
                        <label class="w-25">وضعیت : </label>
                        <select class="form-control" v-model="model.Status" required>
                            <option v-bind:value="null">انتخاب کنید ...</option>
                            <option v-for="item in UserStatuses" v-bind:value="item.Key">
                                {{ item.Value }}
                            </option>
                        </select>
                    </div>
                    <div class="p-5 flex">
                        <a class="btn btn-red mx-5 flex-1" href="#">بستن</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>